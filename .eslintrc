{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:import/recommended",
    "plugin:promise/recommended",
    "standard",
    "standard-react",
    "prettier/react",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["prettier", "react", "react-hooks", "import", "promise", "jest"],
  "rules": {
    "react/jsx-boolean-value": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "import/no-unresolved": [
      /*
      * This rule is set to `warn` level instead of `error` since currently.
      * `eslint-plugin-import` does not support peerDependencies.
      *
      * Since we moved `react-spring` to peerDependencies, with the earlier config,
      * this rule, throws an error while running eslint.
      *
      * Ref link: https://github.com/import-js/eslint-plugin-import/issues/825
      */
      "warn",
      { "ignore": ["^react(-dom)?$", "^styled-components$"] }
    ],
    "linebreak-style": ["error", "unix"],
    "curly": "error"
  }
}
